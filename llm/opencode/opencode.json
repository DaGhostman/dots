{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "llama-cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "local",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coder-next": {
          "name": "qwen3-coder-next"
        },
        "qwen3-3.5-35b-a3b": {
            "name": "Qwen3.5 35b A3b MOE"
        },
        "qwen3-3.5-27b": {
            "name": "Qwen3.5 27b"
        },
        "lfm": {
            "name": "LFM 2.5 25b A2b"
        },
        "nomic-embed-text": {
            "name": "nomic-embed-text"
        }
      }
    }
  },
  "mcp": {
    "ddg-search": {
      "type": "local",
      "enabled": true,
      "command": ["uvx", "duckduckgo-mcp-server"]
    },
    "tree-sitter-analyzer": {
        "type": "local",
        "enabled": true,
        "command": ["uvx", "--from", "tree-sitter-analyzer[mcp]", "tree-sitter-analyzer-mcp"]
    },
    "context7": {
       "type": "local",
       "command": ["npx", "-y", "@upstash/context7-mcp"],
       "enabled": true
    }
  },
  "agent": {
      "explore": {
          "temperature": 1.0
      },
  },
  "plugin": [
      "opencode-mem@^2.11",
      "@tarquinen/opencode-dcp@^2.1.8",
      "@mohak34/opencode-notifier@latest",
      "better-opencode-async-agents",
  ]
}
